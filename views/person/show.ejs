<h2>Person</h2>

<form class="form-horizontal" role="form">
	<div class="form-group">		
		<div class="form-group">
			<label class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input value="<%= person.name %>" name="name" type="text" class="form-control" disabled/>
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Saldo</label>
			<div class="col-sm-10">
				<div class="input-group">
					<input value="<%= person.saldo().toFixed(2) %>" name="saldo" type="text" class="form-control" disabled/>
					<span class="input-group-addon">&euro;</span>
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<a href="/person/edit/<%=person.id %>" class="btn btn-default">Edit</a>
			</div>
		</div>
	</div>
</form>
<hr>
<a href="/person" class="btn btn-default">Back to list</a>
